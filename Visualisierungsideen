plot(s,
     edge.arrow.size=.2,
     edge.curved=.2,
     edge.color="grey",
     edge.width=E(s)$weight,
     vertex.shape="circle",
     vertex.color="red",
     vertex.size=degree(s)*1.5,
     vertex.label=NA,
     edge.label=E(s)$weight,
     edge.label.color="black",
     edge.label.degree=0,
     edge.label.cex=.8,
     edge.label.family="Helvetica",
     edge.label.font=1,
     main="Beispiel f√ºr die Kantenvisualisierung")
